                <div class="item-box2"></div>
                <div class="item-box3">冰</div>
                <div class="item-box3">熱</div>
              </div>
              <% data.forEach((item)=>{ %>
                <% if(item.categoryid === 1)  {%> 
                  <div class="drink-item">
                      <div class="item-box1">
                        <a href="/edit/<%= item.id %> "><img class="icon" src="./img/edit.png"></a>
                        <a href="/delete/<%= item.id %> "><img class="icon" src="./img/delete.png"></a>
                      </div>
                    <div class="item-box2">
                      <div><%= item.chineseName %> </div>
                      <div class="englishName"><%= item.englishName %> </div>
                    </div>
                    <div class="item-box3 ice-price"><%= item.icePrice %> </div>
                    <div class="item-box3"><%= item.hotPrice %> </div>
                  </div>  
