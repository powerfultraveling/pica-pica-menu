  <body>
    <% if(add_modal_open === true) { %> 
      <%- include ("../template/add-modal.ejs")%> 
    <% } %> 

    <div class="container">
      <% if(user){ %>
        <div class="admin-icon-box">
          <a class="logout" href="/logout"
            >登出</a>
        </div>
      <% } else {%>  
        <div class="admin-icon-box">
          <a href="/login"
            ><img class="admin-icon" src="./img/admin.png"
          /></a>
        </div>
      <% } %> 
      <div>
        <a><img class="logo" src="./img/pica.png" /></a>
      </div>
      <div class="buttons">
        <a href="#coffee"><button class="food-btn">咖啡</button></a>
        <a href="#tea"><button class="food-btn">茶</button></a>
        <a href="#chocolate"><button class="food-btn">巧克力</button></a>
        <a href="#juice"><button class="food-btn">果汁</button></a>
        <a href="#dessert"><button class="food-btn">甜點</button></a>
        <a href="#salad"><button class="food-btn">沙拉</button></a>
        <a href="#dishes"><button class="food-btn">鹹食</button></a>
      </div>
